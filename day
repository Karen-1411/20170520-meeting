'將未填的日期以往前一個日期填上
Sub day()

    Dim rcount As Integer
    Dim i, y, j As Integer
    Dim workyear As Integer
    
    workworkyear = 104
    
    For y = 1 To 12 Step 1
    
        rcount = Sheets(workyear & "年" & y & "月").Cells(Rows.Count, 4).End(xlUp).Row

        For i = 3 To rcount Step 1

            If Sheets(workyear & "年" & y & "月").Cells(i, 4).Value <> "" And _
                Sheets(workyear & "年" & y & "月").Cells(i, 1).Value = "" Then

                j = 1

                Do
                    j = j + 1
                    
                    If IsDate(Sheets(workyear & "年" & y & "月").Cells(i - j, 1).Value) = True Then

                        Sheets(workyear & "年" & y & "月").Cells(i, 1).Value = _
                            Sheets(workyear & "年" & y & "月").Cells(i - j, 1).Value

                    End If
                    
                Loop While IsDate(Sheets(workyear & "年" & y & "月").Cells(i - j, 1).Value) = False

            End If

        Next

    Next
    

End Sub

